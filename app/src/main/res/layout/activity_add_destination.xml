<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AddDestinationActivity">

    <ImageView
        android:id="@+id/imagebrowse"
        android:layout_width="201dp"
        android:layout_height="185dp"
        android:layout_gravity="center"
        android:src="@drawable/imageplaceholder" />

    <EditText
        android:id="@+id/editProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination name"
        android:inputType="text" />

    <EditText
        android:id="@+id/editProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Destination estimated price"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editProductDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Destination desc"
        android:inputType="text" />

    <Button
        android:id="@+id/LoginBtn"
        android:layout_width="213dp"
        android:layout_height="61dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:backgroundTint="@color/brown"
        android:layout_gravity="center"
        android:text="Add Destination" />
</LinearLayout>